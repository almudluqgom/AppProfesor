<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/botonLogin"
            android:layout_width="134dp"
            android:layout_height="139dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:onClick="seleccionaUsuario"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/textoSaludoProfe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Inicia Sesión Primero" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/BotonMaceta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.028">

        <Button
            android:id="@+id/BotonNuevoEncargo"
            android:layout_width="373dp"
            android:layout_height="129dp"
            android:enabled="false"
            android:onClick="AccedeTareas"
            android:text="Nuevo Encargo"
            android:visibility="visible" />

        <Button
            android:id="@+id/BotonPeticiones"
            android:layout_width="373dp"
            android:layout_height="129dp"
            android:enabled="false"
            android:onClick="MiraPeticiones"
            android:text="Peticiones"
            android:visibility="visible" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/BotonMaceta"
        android:layout_width="101dp"
        android:layout_height="99dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/BotonChat"
        android:layout_width="114dp"
        android:layout_height="106dp"
        android:text="Chat"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929" />

    <Button
        android:id="@+id/BotonAjustes"
        android:layout_width="114dp"
        android:layout_height="106dp"
        android:text="Ajustes"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928" />

</androidx.constraintlayout.widget.ConstraintLayout>
